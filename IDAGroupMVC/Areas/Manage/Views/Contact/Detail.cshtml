
@{
    ViewData["Title"] = "Detail";
}
@model Contact
<h1>Detail</h1>

<div class="content-body" style="min-height: 740px;">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="displ card-header">
                        <h4 class="card-title">
                            Contact Panel
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-4">
                                <span style="font-weight: 700;font-size: 18px;">
                                    Fullname:
                                </span>
                                <input class="form-control" asp-for="Fullname" disabled />
                            </div>
                            <div class="col-lg-4">
                                <span style="font-weight: 700;font-size: 18px;">
                                    Email:
                                </span>
                                <a style="font-size: 18px;" href="mailto: @Model.Email">
                                    <input class="form-control" asp-for="Email" disabled />
                                </a>
                            </div>

                            <div style="margin-top:10px;" class="col-lg-6 d-flex justify-content-center">
                                <span style="font-weight: 700;font-size: 18px;">
                                    Subject:
                                </span>
                                <p style="display: inline-block;font-size: 18px;">
                                    <input class="form-control" asp-for="Subject" disabled />
                                </p>
                            </div>
                            <div style="margin-top:10px;" class="col-lg-6 d-flex justify-content-center">
                                <span style="font-weight: 700;font-size: 18px;">
                                    Message Date:
                                </span>
                                <p style="display: inline-block;font-size: 18px;">
                                    <input class="form-control" asp-for="CreatedDate" disabled />
                                </p>
                            </div>
                            <div class="col-lg-12 d-flex justify-content-center">
                                <span style="font-weight: 700;font-size: 18px;">Text:</span>
                                <br />
                            </div>
                            <div class="col-lg-12 d-flex justify-content-center">
                                <div class="col-lg-8 d-flex justify-content-center">
                                    <textarea style="height:150px;" rows="4"  class="form-control" asp-for="Text" disabled></textarea>
                                </div>
                            </div>
                         
                            <div class="col-lg-12 d-flex justify-content-end">
                                <a asp-action="index" asp-controller="contact" class="ms-4  me-2 btn  btn-warning">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>