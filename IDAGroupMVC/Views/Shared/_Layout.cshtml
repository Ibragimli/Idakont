
@inject LayoutService service
@{ List<Setting> settings = await service.GetSettingsAsync(); }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="~/uploads/settings/@settings.FirstOrDefault(x => x.Key == "HeadSmallLogoImage")?.Value">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>
        @settings.FirstOrDefault(x => x.Key == "HeadTitle")?.Value
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta itemprop="name" content="IDAKONT">
    <meta property="og:title" content="IDAKONT">
    <meta name="keywords" content="Lojistik, IDAKONT, deniz, tren, kara ve hava yolu, taşıyoruz, taşımak,Depolama Hizmetlerimiz,Depolama, ">
    <meta name="description" content="İdakont Lojistik A.Ş. olarak Türkiye’den dünyanın her köşesine deniz, tren, kara ve hava yolu ile ürünlerinizi en hızlı ve en güvenilir şekilde taşıyoruz. Depolama Hizmetlerimiz ile de sizlere kendi depolarınızı kullanıyormuş gibi destek sağlıyoruz. Sadece bize talebinizi iletin, gerisini uzman ekip arkadaşlarımız sizlere tüm alternatifleri ile birlikte sunsunlar. Her zaman yanınızda olmaktan onur ve mutluluk duyarız.">
    <meta property="og:description" content="İdakont Lojistik A.Ş. olarak Türkiye’den dünyanın her köşesine deniz, tren, kara ve hava yolu ile ürünlerinizi en hızlı ve en güvenilir şekilde taşıyoruz. Depolama Hizmetlerimiz ile de sizlere kendi depolarınızı kullanıyormuş gibi destek sağlıyoruz. Sadece bize talebinizi iletin, gerisini uzman ekip arkadaşlarımız sizlere tüm alternatifleri ile birlikte sunsunlar. Her zaman yanınızda olmaktan onur ve mutluluk duyarız.">
    <meta property="og:type" content="website">
    <meta name="MobileOptimized" content="width">
    <meta name="HandheldFriendly" content="true">
    <meta property="og:url" content="https://idakont.com/">
</head>

<body>

    @if (TempData["error"] != null)
    {
        <input style="z-index:30;" type="hidden" id="toaster-error" value="@TempData["error"]" />
    }
    @if (TempData["success"] != null)
    {
        <input style="z-index:30;" type="hidden" id="toaster-success" value="@TempData["success"]" />
    }

    <header style="background-image: url( @Url.Content("~/uploads/settings/")@settings.FirstOrDefault(x => x.Key == "HeadBackgroundImage")?.Value); background-repeat: no-repeat;     background-size: cover; background-position: center;   height: 55vh; ">
        <section id="headers">
            <div class="container">
                <div class="row" style="flex-wrap:nowrap;">
                    <div class="col-lg-4 col-sm-4 col-4 headLogo">

                    </div>
                    <div class="col-lg-4 col-sm-4 col-4 headLogo">
                        <a class="navbar-brand" asp-action="index" asp-controller="home">
                            <img src="~/uploads/settings/@settings.FirstOrDefault(x => x.Key == "HeadLogoImage")?.Value" alt="" width="30" height="24"
                                 class="d-inline-block align-text-top me-2">

                            @settings.FirstOrDefault(x => x.Key == "HeadLogoText")?.Value
                        </a>
                    </div>
                    <div class="col-lg-4 col-sm-4 col-4 headNav">
                        <nav class="navbar navbar-expand-lg ">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon">
                                    <i class="fa-solid fa-bars"></i>
                                </span>
                            </button>
                            <div class="navbarNavMain">
                                <ul class="navbar-nav nav">
                                    <li class="nav-item"><a asp-action="index" asp-controller="home" class="nav-link " aria-current="page">  @settings.FirstOrDefault(x => x.Key == "HeadNav1")?.Value</a></li>
                                    @*<li class="nav-item"><a asp-action="products" asp-controller="company" class="nav-link">  @settings.FirstOrDefault(x => x.Key == "HeadNav2")?.Value</a></li>*@
                                    <li class="nav-item"><a asp-action="Index" asp-controller="about" class="nav-link">  @settings.FirstOrDefault(x => x.Key == "HeadNav3")?.Value</a></li>
                                    <li class="nav-item"><a asp-action="contactUs" asp-controller="contact" class="nav-link">  @settings.FirstOrDefault(x => x.Key == "HeadNav4")?.Value</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
                <div class="row navRow">
                    <div class="collapse navbar-collapse navbarNav" id="navbarNav">
                        <ul class="navbar-nav nav">
                            <li class="nav-item"><a asp-action="index" asp-controller="home" class="nav-link " aria-current="page">  @settings.FirstOrDefault(x => x.Key == "HeadNav1")?.Value</a></li>
                            @*<li class="nav-item"><a asp-action="products" asp-controller="company" class="nav-link">  @settings.FirstOrDefault(x => x.Key == "HeadNav2")?.Value</a></li>*@
                            <li class="nav-item"><a asp-action="Index" asp-controller="about" class="nav-link">  @settings.FirstOrDefault(x => x.Key == "HeadNav3")?.Value</a></li>
                            <li class="nav-item"><a asp-action="contactUs" asp-controller="contact" class="nav-link">  @settings.FirstOrDefault(x => x.Key == "HeadNav4")?.Value</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </header>

    @RenderBody()

    <footer>

        <!-- Section: Links  -->
        <section id="footUp">
            <div class="container text-center text-md-start">
                <!-- Grid row -->
                <div class="row mt-3">

                    <!-- Grid column -->
                    <div class="footLeft col-md-4 col-lg-4 col-xl-4 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">

                            @settings.FirstOrDefault(x => x.Key == "LeftTitleFoot")?.Value
                        </h6>
                        <p class="d-flex  align-items-center" style="font-family: system-ui !important; ">
                            <i style=" font-size: 30px; " class="fa-solid fa-map-location-dot me-3"></i>
                            <span style="font-family: system-ui !important;font-size: 15.4px;line-height: 20px;letter-spacing: 1px;">

                                @settings.FirstOrDefault(x => x.Key == "Right1Foot")?.Value.Substring(0, 28)
                                <br />
                                @settings.FirstOrDefault(x => x.Key == "Right1Foot")?.Value.Substring(29, 29)
                                <br />
                                @settings.FirstOrDefault(x => x.Key == "Right1Foot")?.Value.Substring(58)
                            </span>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    @*<div class="footMiddle col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">

                            @settings.FirstOrDefault(x => x.Key == "MiddleTitleFoot").Value
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">  @settings.FirstOrDefault(x => x.Key == "Middle1Foot")?.Value</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">  @settings.FirstOrDefault(x => x.Key == "Middle2Foot")?.Value</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">  @settings.FirstOrDefault(x => x.Key == "Middle3Foot")?.Value</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">  @settings.FirstOrDefault(x => x.Key == "Middle4Foot")?.Value</a>
                        </p>
                    </div>*@
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="footRight col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            @settings.FirstOrDefault(x => x.Key == "RightTitleFoot")?.Value
                        </h6>

                        <p class="d-flex  align-items-center">
                            <i class="fas fa-envelope me-3"></i>
                            <a style="font-size:17.4px;" href="mailto:">
                                @settings.FirstOrDefault(x => x.Key == "Right2Foot")?.Value
                            </a>
                        </p>
                        <p class="d-flex  align-items-center">
                            <i class="fas fa-phone me-3"></i>
                            <a style="font-family: system-ui  !important; " href="tel:">
                                @settings.FirstOrDefault(x => x.Key == "Right3Foot")?.Value
                            </a>
                        </p>

                       @* <p class="d-flex  align-items-center">
                            <i style="width: 16px;" class="fa-solid fa-house-laptop  me-3"></i>
                            <a style="font-family: system-ui !important; " href="tel:">
                                @settings.FirstOrDefault(x => x.Key == "Right4Foot")?.Value
                            </a>
                        </p>*@
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <section id="footDown">
            <div class="container">
                <div class="row">
                    <div class="CopyrightText text-center p-4">
                        © @DateTime.UtcNow.Year @settings.FirstOrDefault(x => x.Key == "CopyRightFoot")?.Value

                        <a class="text-reset fw-bold"  href="#">@settings.FirstOrDefault(x => x.Key == "CopyRightTextFoot")?.Value</a>
                    </div>
                </div>
            </div>

        </section>
        <!-- Copyright -->

    </footer>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/jquery.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>

    <script src="~/js/mainJS/slider.js"></script>
    <script src="~/js/headerJS/navbar.js"></script>
    <script src="~/js/headerJS/headSlider.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        $(document).ready(function () {
            if ($("#toaster-error").length) {
                console.log($("#toaster-error"))
                toastr["error"]($("#toaster-error").val())
            }
            if ($("#toaster-success").length) {
                console.log($("#toaster-success"))
                toastr["success"]($("#toaster-success").val())
            }
        })
    </script>
   
    @RenderSection("Scripts", required: false)
</body>

</html>