
@{ ViewData["Title"] = "ContactUs"; }
@model ContactViewModel
<main>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 contactImage">
                    <img src="~/uploads/settings/@Model.Setting.Where(x=>x.IsDelete==false).FirstOrDefault(x=>x.Key=="ContactImage")?.Value" alt="">
                </div>
                <div class="col-lg-8 contactInputs">
                    <h1>@Model.Setting.Where(x => x.IsDelete == false).FirstOrDefault(x => x.Key == "ContactTitle")?.Value </h1>
                    <form asp-action="contactus" method="post">
                        <div class="row">

                            <div class="col-lg-12"><div asp-validation-summary="ModelOnly" class="text-danger"></div></div>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Contact.Fullname" type="text" class="form-control" placeholder="Soyadı Adı * ">
                                <span class="text-danger" asp-validation-for="@Model.Contact.Fullname"></span>
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Contact.Email" type="email" class="form-control" placeholder="E-posta *">
                                <span class="text-danger" asp-validation-for="@Model.Contact.Email"></span>
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Contact.Subject" type="text" class="form-control" placeholder="Başlık *">
                                <span class="text-danger" asp-validation-for="@Model.Contact.Subject"></span>
                            </div>
                            <div class="col-lg-12">
                                <textarea style="margin-top:10px" asp-for="@Model.Contact.Text" placeholder="Mesajınız *"></textarea>
                                <span class="text-danger" asp-validation-for="@Model.Contact.Text"></span>
                            </div>
                            <div class="col-lg-12 contactBtn">
                                <button type="submit" class="btn btn-primary">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

